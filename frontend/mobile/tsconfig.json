{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../shared/**/*.ts",
        "../shared/**/*.tsx"
    ]
}
